@{
    ViewBag.Title = "displayLine";
}
<style>
    body, html {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
    }

    body {
        background: url("../../../Map/export-map-share.png")no-repeat center fixed;
        background-size: cover;
    }

    canvas {
        position: absolute;
        top: 0;
        left: 0;
    }
</style>
<head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
</head>
<div id="div1">

</div>
<div id="div2">
</div>
<body>
    <canvas id="myCanvas"></canvas>

    <script>
        $.getScript('../../../Scripts/Draw.js', function () {
            var canvas = document.getElementById("myCanvas");
            var counter = 20;
            var ctx = canvas.getContext("2d");
            ctx.canvas.width = window.innerWidth;
            ctx.canvas.height = window.innerHeight;
            var IntervalTime =  1000 * @ViewBag.seconds;
            var reruenValues = drawCircleAndLine(@ViewBag.Lon, @ViewBag.Lat, true, ctx, null);
            var prevLon = reruenValues.Lon;
            var prevLat = reruenValues.Lat;
            myTimer = (function myTimer() {
            $.post("@Url.Action("GetValues")").done(function (xml) {
                reruenValues = drawCircleAndLine(prevLon, prevLat, false, ctx, xml);
                prevLon = reruenValues.Lon + counter;
                prevLat = reruenValues.Lat + counter;
                counter += 20;
                document.getElementById('div1').innerText = prevLon;
                document.getElementById('div2').innerText = prevLat;

                });
            });
            interval = setInterval(myTimer, IntervalTime);
        });
    </script>
</body>