@model Ex3.Models.OnesSampleModel

@{
    ViewBag.Title = "One Sample Display";
}

<style>
    body {
        background-image: url("../../Map/export-map-share.png");
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>

<style>
    .dot {
        height: 8px;
        width: 8px;
        color: blue;
        border-radius: 50%;
        display: inline-block;
        position: center;
        background-color: red;
        box-shadow: 0 0 0 2px;
        position: absolute;
    }
</style>

<h2>display</h2>

<head>

</head>
<body>
    <canvas id="myCanvas"></canvas>
    <script>
        var canvas = document.getElementById("myCanvas");
        var ctx = canvas.getContext("2d");
        ctx.canvas.width = window.innerWidth;
        ctx.canvas.height = window.innerHeight;
        var lon = (@ViewBag.Lon + 180) * ($(window).width) / 360);
        var lat = (@ViewBag.Lat + 180) * ($(window).height) / 360);
        ctx.beginPath();
        ctx.arc(lon, lat, 4, 0, 2 * MATH.PI);
        ctx.lineWidth = 2;
        ctx.lineStyle = 'blue';
        ctx.fillStyle = 'red';
        ctx.fill();
        ctx.stroke();
    </script>


</body>